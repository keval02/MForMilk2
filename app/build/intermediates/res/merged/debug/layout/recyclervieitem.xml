<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="@drawable/shadow"
            android:orientation="horizontal"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/itemName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="Milk"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:id="@+id/categorynamelayout"
                            android:layout_marginLeft="1dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/itemCategoryName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.8"
                                tools:text="TeaMilk"
                                android:textSize="12sp"
                                android:visibility="visible" />
                            <!--<TextView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--tools:text="FM"-->
                            <!--android:id="@+id/finishtype"-->
                            <!--android:layout_weight="1"-->
                            <!--android:textSize="12sp"-->
                            <!--/>-->
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_margin="6dp"
                        android:gravity="top"
                        android:orientation="horizontal"
                        android:layout_marginRight="6dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"

                        >

                        <TextView
                            android:id="@+id/txtRsEach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:text="@string/Rs"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:textColor="@color/black"
                            android:textSize="16sp"


                            />

                        <TextView
                            android:id="@+id/txtAmountEach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:text="0"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>
                    <!--<TextView-->
                    <!--android:layout_weight="8"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:padding="3dp"-->
                    <!--android:text=""-->
                    <!--android:id="@+id/txt_eachitemrs"-->
                    <!--android:gravity="right|center|center_vertical"-->
                    <!--android:layout_gravity="right"-->
                    <!--/>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"

                        >

                        <LinearLayout
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="5"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imgMinus"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:src="@drawable/minus_white_blue" />

                                <EditText
                                    android:id="@+id/edtItemQty"
                                    android:layout_width="42dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/custom_editquantity_background"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="3"
                                    android:padding="5dp"
                                    android:enabled="false"
                                    android:focusableInTouchMode="false"
                                    android:singleLine="true"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                                <!--<TextView-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="match_parent"-->
                                <!--android:text="99"-->
                                <!--android:textColor="@color/colorPrimary"-->
                                <!--android:textSize="16sp"-->
                                <!--android:layout_weight="1"-->
                                <!--android:inputType="number"-->
                                <!--android:gravity="center"-->
                                <!--android:padding="3dp"-->
                                <!--android:id="@+id/txtItemQty" />-->

                                <ImageView
                                    android:id="@+id/imgPlus"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:src="@drawable/plus_whit_blue2" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="6dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"

                        >

                        <TextView
                            android:id="@+id/txtRs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:text="@string/Rs"
                            android:textColor="@color/black"
                            android:textSize="16sp"


                            />

                        <TextView
                            android:id="@+id/txtAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_gravity="right"-->
        <!--android:gravity="right"-->
        <!--android:layout_height="match_parent">-->

        <!--<ImageView-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/delete"-->
        <!--android:id="@+id/delete"-->

        <!--/>-->

        <!--</LinearLayout>-->

    </FrameLayout>

</LinearLayout>