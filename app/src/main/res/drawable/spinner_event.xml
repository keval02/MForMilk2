<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>


        <item>
            <shape xmlns:android="http://schemas.android.com/apk/res/android">

                <stroke
                    android:width="1dp"
                    android:color="@color/colorcontrol" />
                <solid android:color="@android:color/transparent" />

                <corners android:radius="3dp" />
            </shape>
        </item>
        <item >
            <bitmap android:gravity="center|right" android:src="@drawable/expand_arrow_104" />   // you can use any other image here, instead of default_holo_dark_am
        </item>
    </layer-list>
    </item>

</selector>
