<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:label">false</item>
        <item name="android:listDivider">@color/white</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <!--<item name="android:textColorPrimary">@color/white</item>-->

    </style>
    <style name="NoActionBarForCalenderPage" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorControlNormal">@color/colorcontrol</item>


    </style>

    <style name="NoActionBarWhite" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyleWhite</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!--<item name="android:label">false</item>-->
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <!--<item name="android:textColorPrimary">@color/white</item>-->

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="DrawerArrowStyleWhite" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="Textstyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="colorControlNormal">@color/colorAccent</item>

    </style>
    <style name="NavigationViewStyle">
        <item name="android:textSize">15sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">30dp</item><!-- menu item height-->
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ActionSheetStyleiOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/edit_text_white</item>
        <item name="otherButtonTopBackground">@drawable/edit_text_white</item>
        <item name="otherButtonMiddleBackground">@drawable/edit_text_white</item>
        <item name="otherButtonBottomBackground">@drawable/edit_text_white</item>
        <item name="otherButtonSingleBackground">@drawable/edit_text_white</item>
        <item name="cancelButtonTextColor">@color/colorPrimary</item>
        <item name="otherButtonTextColor">@color/colorPrimary</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">2dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">12sp</item>
    </style>

</resources>
